- name: Run simple commands
  preconditions:
    linkfile:
      hvenv: /home/vagrant/hvenv
      folder: /hitchrun/tests/simple/
  scenario:
    - Run:
       cmd: ~/hvenv/bin/hitchrun commanda
       expect: Command A ran
    - Run:
       cmd: ~/hvenv/bin/hitchrun commandb
       expect: Command B ran
    - Run:
       cmd: ~/hvenv/bin/hitchrun commandvar1 C
       expect: Command C
    - Run:
       cmd: ~/hvenv/bin/hitchrun humantime
       expect: now
    - Run:
       cmd: ~/hvenv/bin/hitchrun showcwd
       expect: /home/vagrant
    - Run:
       cmd: ~/hvenv/bin/hitchrun showkeypath
       expect: /hitchrun
    - Run:
       cmd: ~/hvenv/bin/hitchrun help
       expect: Command A
