- name: Run simple commands
  preconditions:
    files:
      hitchreqs.txt: |
        argcomplete==1.7.0
        click==6.7
        colorama==0.3.7
        commandlib==0.2.5
        first==2.0.1
        hitchrun==0.1
        humanize==0.5.1
        Jinja2==2.9.5
        MarkupSafe==0.23
        path.py==10.1
        pip-tools==1.8.0
        six==1.10.0
      key.py: |
        import humanize
        import datetime
        from hitchrun import cwd, genpath, Path
        keypath = Path(__file__).abspath()

        def commanda():
            """
            Command A help.
            """
            print("Command A ran")

        def commandb():
            """
            Command B help.
            """
            print("Command B ran")

        def commandvar1(variable1):
            print("Command {0}".format(variable1))

        def showcwd():
            print(cwd)

        def showkeypath():
            print(keypath)

        def showgenpath():
            print(genpath)

        def humantime():
            """Use a library."""
            print(humanize.naturaltime(datetime.datetime.now()))
  scenario:
    - hitchrun:
       args: commanda
       expect: Command A ran
    - hitchrun:
       args: commandb
       expect: Command B ran
    - hitchrun:
       args: commandvar1 C
       expect: Command C
    - hitchrun:
       args: humantime
       expect: now
    - hitchrun:
       args: showcwd
       expect: /home/vagrant
    - hitchrun:
       args: showgenpath
       expect: /home/vagrant
    - hitchrun:
       args: showkeypath
       expect: /hitchrun
    - hitchrun:
       args: help
       expect: Command A
